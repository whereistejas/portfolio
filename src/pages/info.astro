---
import "../styles/global.css";

import Row from "../components/row.astro";
import Textorlink from "../components/textorlink.astro";
import Page from "../layouts/page.astro";

const headers = [
  { type: "text", content: "INFO" },
  { type: "link", content: "CLOSE", href: "/" },
];
const footers = [
  { type: "text", content: "" },
  {
    type: "link",
    content: "SEND AN EMAIL",
    href: "mailto:email@whereistejas.xyz",
  },
];
---

<Page flex_start={false}>
  <Fragment slot="header">
    {
      headers.map((el) => (
        <Textorlink type={el.type} content={el.content} href={el.href} />
      ))
    }
  </Fragment>

  <Fragment slot="main">
    <section>
      <div
        class="w-full md:w-48 md:max-w-full
              flex flex-col justify-center gap-1 md:gap-1.5 lg:gap-2"
      >
        <Row tight={true}>
          <Fragment slot="key"><span class="uppercase">Profile</span></Fragment>
          <Fragment slot="value">
            <p class="font-light text-justify text-pretty hyphens-auto">
              I'm a software engineer and photographer based in London, UK. I am
              an avid reader, currently reading
              <span class="italic">
                <a href="https://www.goodreads.com/book/show/27276428-the-gene">
                  The Gene
                </a>
              </span>
              by Siddhartha Mukherjee.
            </p>
          </Fragment>
        </Row>
        <Row tight={true}>
          <Fragment slot="key">
            <span class="uppercase">Beliefs</span>
          </Fragment>
          <Fragment slot="value">
            <p class="font-light text-justify text-pretty hyphens-auto">
              Software is made for humans.
            </p>
            <p class="font-light text-justify text-pretty hyphens-auto">
              All software is a tool.
            </p>
            <p class="font-light text-justify text-pretty hyphens-auto">
              Good tools are simple and intuitive.
            </p>
          </Fragment>
        </Row>
        <Row tight={true}>
          <Fragment slot="key">
            <span class="uppercase">Work</span>
          </Fragment>
          <Fragment slot="value">
            <p class="font-light text-justify text-pretty hyphens-auto">
              <a href="https://tably.com" class="external">Tably</a>,
              <span class="uppercase"> 2021 </span>
              &mdash; Present
            </p>
            <p class="font-light text-justify text-pretty hyphens-auto">
              <a href="https://wipro.com" class="external">Wipro</a>,
              <span class="uppercase"> 2019 </span>
              &mdash;
              <span class="uppercase"> 2021 </span>
            </p>
          </Fragment>
        </Row>
        <Row tight={true}>
          <Fragment slot="key">
            <span class="uppercase">University</span>
          </Fragment>
          <Fragment slot="value">
            <p class="font-light">
              Bachelors in Mechanical Engineering,
              <a href="https://www.unipune.ac.in" class="external">SPPU</a>,
              <span class="uppercase"> 2016 </span>
              &mdash;
              <span class="uppercase"> 2019 </span>
            </p>
          </Fragment>
        </Row>
        <Row tight={true}>
          <Fragment slot="key">
            <span class="uppercase">Socials</span>
          </Fragment>
          <Fragment slot="value">
            <p class="font-light">
              <a
                href="https://www.linkedin.com/in/whereistejas"
                class="external">Linkedin</a
              >,
              <a href="https://www.github.com/whereistejas" class="external"
                >Github</a
              >,
              <a href="https://www.x.com/whereistejas" class="external">X</a>,
              <a href="https://www.instagram.com/whereistejas" class="external"
                >Instagram</a
              >,
              <a href="https://www.are.na/whereistejas">Are.na</a>,
              <a href="https://www.goodreads.com/whereistejas">Goodreads</a>
            </p>
          </Fragment>
        </Row>
      </div>
    </section>
  </Fragment>

  <Fragment slot="footer">
    {
      footers.map((el) => (
        <Textorlink type={el.type} content={el.content} href={el.href} />
      ))
    }
  </Fragment>
</Page>
