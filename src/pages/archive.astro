---
import "../styles/blog.css";

import Textorlink from "../components/textorlink.astro";
import PageStart from "../components/pagestart.astro";

const headers = [
  { type: "text", content: "TEJAS SANAP" },
  { type: "text", content: "BLOG" },
  { type: "link", content: "CLOSE", href: "/" },
];

const posts = Object.values(
  import.meta.glob("./archive/*.mdx", { eager: true })
);
---

<PageStart>
  <Fragment slot="header">
    {
      headers.map((el) => (
        <Textorlink type={el.type} content={el.content} href={el.href} />
      ))
    }
  </Fragment>
  <Fragment slot="main">
    <section class="archive">
      <div class="archive-inner">
        {
          posts.map((post) => (
            <div class="row">
              <div>{new Date(post.frontmatter.date).toLocaleDateString()}</div>
              <div class="value">
                <p>
                  <a href={post.url}>{post.frontmatter.title}</a>
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </section>
  </Fragment>
</PageStart>
