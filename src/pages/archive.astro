---
import Page from "../layouts/page.astro";

import Textorlink from "../components/textorlink.astro";
import Row from "../components/row.astro";

const headers = [
  { type: "text", content: "BLOG" },
  { type: "link", content: "CLOSE", href: "/" },
];

const posts: Record<string, any>[] = Object.values(
  import.meta.glob("./archive/*.mdx", { eager: true })
);
---

<Page>
  <Fragment slot="header">
    {
      headers.map((el) => (
        <Textorlink type={el.type} content={el.content} href={el.href} />
      ))
    }
  </Fragment>
  <Fragment slot="main">
    <section>
      <div
        class="w-full md:w-48 md:max-w-full
              flex flex-col justify-center gap-1.5"
      >
        {
          posts.map((post) => (
            <Row>
              <Fragment slot="key">
                <span class="uppercase">
                  {new Date(post.frontmatter.date)
                    .toLocaleDateString("en-GB", {
                      day: "2-digit",
                      month: "short",
                      year: "numeric",
                    })
                    .replace(/\//g, ".")}
                </span>
              </Fragment>
              <Fragment slot="value">
                <p class="uppercase">
                  <a href={post.url}>{post.frontmatter.title}</a>
                </p>
              </Fragment>
            </Row>
          ))
        }
      </div>
    </section>
  </Fragment>
</Page>
