---
import "../styles/global.css";

import Homepage from "../components/homepage.astro";
import Carousel from "../components/carousel.astro";
import Textorlink from "../components/textorlink.astro";

const headers = [
  { type: "text", content: "TEJAS SANAP" },
  { type: "text", content: "PROGRAMMER, ENGINEER, PHOTOGRAPHER" },
  { type: "link", content: "INFO", href: "/info" },
];

const footers = [
  { type: "link", content: "BLOGROLL", href: "/blogroll" },
  { type: "text", content: "" },
  {
    type: "link",
    content: "SEND AN EMAIL",
    href: "mailto:email@whereistejas.xyz",
  },
];
---

<Homepage>
  <Fragment slot="header">
    {
      headers.map((el) => (
        <Textorlink type={el.type} content={el.content} href={el.href} />
      ))
    }
  </Fragment>

  <Fragment slot="main">
    <Carousel />
  </Fragment>

  <Fragment slot="footer">
    {
      footers.map((el) => (
        <Textorlink type={el.type} content={el.content} href={el.href} />
      ))
    }
  </Fragment>
</Homepage>
