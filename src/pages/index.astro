---
import Carousel from "../components/carousel.astro";
import Textorlink from "../components/textorlink.astro";

import Page from "../layouts/page.astro";

const headers = [
	{ type: "link", content: "INBOX", href: "/inbox" },
	{ type: "link", content: "BLOG", href: "/blog" },
];

const footers = [
	{ type: "link", content: "ARCHIVE", href: "/archive" },
	{ type: "link", content: "INFO", href: "/info" },
];
---

<Page flex_start={false} title="">
	<Fragment slot="header">
		{
			headers.map((el) => (
				<Textorlink type={el.type} content={el.content} href={el.href} />
			))
		}
	</Fragment>

	<Fragment slot="main">
		<Carousel transition:persist key="main-carousel" />
	</Fragment>

	<Fragment slot="footer">
		{
			footers.map((el) => (
				<Textorlink type={el.type} content={el.content} href={el.href} />
			))
		}
	</Fragment>
</Page>
