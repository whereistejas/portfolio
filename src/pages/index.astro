---
import "../styles/global.css";

import Carousel from "../components/carousel.astro";
import Textorlink from "../components/textorlink.astro";

import Page from "../layouts/page.astro";

const headers = [
  { type: "text", content: "TEJAS SANAP" },
  { type: "link", content: "BLOG", href: "/archive" },
];

const footers = [
  { type: "link", content: "READING LIST", href: "/readinglist" },
  { type: "link", content: "INFO", href: "/info" },
];
---

<Page flex_start={false}>
  <Fragment slot="header">
    {
      headers.map((el) => (
        <Textorlink type={el.type} content={el.content} href={el.href} />
      ))
    }
  </Fragment>

  <Fragment slot="main">
    <Carousel />
  </Fragment>

  <Fragment slot="footer">
    {
      footers.map((el) => (
        <Textorlink type={el.type} content={el.content} href={el.href} />
      ))
    }
  </Fragment>
</Page>
