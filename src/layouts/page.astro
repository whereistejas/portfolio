---
import { ClientRouter } from "astro:transitions";
import PostHog from "../components/posthog.astro";

import "../styles/global.css";

const { flex_start = true } = Astro.props;
---

<html lang="en">
  <head>
    <PostHog />
    <!-- Like to view source? We might get along email@whereistejas.xyz -->

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Tejas Sanap</title>

    <ClientRouter />
  </head>
  <body
    style={flex_start ? "justify-content: flex-start;" : ""}
    class="h-[100dvh]
    flex flex-col justify-between items-center
    bg-yellow-50/50 dark:bg-neutral-900 text-slate-950 dark:text-slate-50"
  >
    <header
      class="top-0 left-0
      w-full md:w-48 md:max-w-full
      px-1 pt-1
      flex flex-row justify-between
      text-xl lg:text-3xl font-medium"
    >
      <slot name="header" />
    </header>

    <main
      class="flex flex-col
      w-full md:w-48 md:max-w-full
      p-1
      md:text-lg lg:text-xl font-regular"
    >
      <slot name="main" />
    </main>

    <footer
      class="bottom-0 left-0
      px-1 pb-1
      w-full md:w-48 md:max-w-full
      flex flex-row justify-between
      text-lg md:text-xl lg:text-2xl font-medium"
    >
      <slot name="footer" />
    </footer>
  </body>
</html>
