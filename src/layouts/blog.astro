---
import "../styles/global.css";

import Page from "./page.astro";

import Textorlink from "../components/textorlink.astro";

const { frontmatter } = Astro.props;

const headers = [
  { type: "text", content: (frontmatter.title as string).toUpperCase() },

  { type: "link", content: "CLOSE", href: "/archive" },
];
---

<Page>
  <Fragment slot="header">
    {
      headers.map((el) => (
        <Textorlink type={el.type} content={el.content} href={el.href} />
      ))
    }
  </Fragment>
  <Fragment slot="main">
    <article
      class="max-w-none
      dark:prose-invert
      prose prose-base md:prose-lg lg:prose-xl
      prose-p:leading-[1.15]
      prose-headings:mt-2 prose-headings:mb-0.5 prose-headings:text-xl md:prose-headings:text-2xl lg:prose-headings:text-3xl prose-headings:font-medium
      prose-a:no-underline prose-a:font-normal"
    >
      <slot />
    </article>
  </Fragment>
</Page>
