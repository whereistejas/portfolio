---
import "../styles/global.css";

import Page from "./page.astro";

import Textorlink from "../components/textorlink.astro";

const { frontmatter } = Astro.props;

const headers = [
  { type: "text", content: (frontmatter.title as string).toUpperCase() },
  { type: "link", content: "CLOSE", href: "/archive" },
];
---

<Page>
  <Fragment slot="header">
    {
      headers.map((el) => (
        <Textorlink type={el.type} content={el.content} href={el.href} />
      ))
    }
  </Fragment>
  <Fragment slot="main">
    <article
      class="@container prose dark:prose-invert
      max-w-full
      //
      text-slate-950 dark:text-slate-100
      //
      prose-md md:prose-lg lg:prose-xl
      //
      prose-a:font-normal
      prose-a:relative
      prose-a:z-[1]
      prose-a:transition-colors prose-a:duration-150 prose-a:ease-in
      prose-a:text-neutral-950 prose-a:dark:text-neutral-50
      prose-a:hover:text-neutral-500 prose-a:hover:dark:text-neutral-400
      //
      prose-p:text-md md:prose-p:text-lg lg:prose-p:text-lg
      prose-li:text-md md:prose-li:text-lg lg:prose-li:text-lg
      //
      prose-p:leading-snug md:prose-p:leading-normal
      prose-li:leading-snug md:prose-li:leading-normal
      //
      prose-headings:font-medium
      prose-headings:text-xl md:prose-headings:text-2xl lg:prose-headings:text-3xl
      //
      prose-p:my-0.75
      prose-li:my-0.75
      prose-headings:mt-1.5 prose-headings:mb-0.5
      //
      marker:text-slate-950 dark:marker:text-slate-100"
    >
      <slot />
    </article>
  </Fragment>
</Page>
