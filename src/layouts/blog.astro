---
import "../styles/global.css";

import Page from "./page.astro";

import Textorlink from "../components/textorlink.astro";

const { frontmatter } = Astro.props;

const headers = [
  { type: "text", content: (frontmatter.title as string).toUpperCase() },
  { type: "text", content: "" },
  { type: "link", content: "CLOSE", href: "/archive" },
];
---

<Page>
  <Fragment slot="header">
    {
      headers.map((el) => (
        <Textorlink type={el.type} content={el.content} href={el.href} />
      ))
    }
  </Fragment>
  <Fragment slot="main">
    <article
      class="max-w-none
      prose prose-lg md:prose-xl dark:prose-invert
      prose-headings:mt-2 prose-headings:mb-0.5 prose-headings:text-3xl prose-headings:font-medium
      prose-a:no-underline prose-a:font-normal
      prose-p:leading-[1.45]"
    >
      <slot />
    </article>
  </Fragment>
</Page>
