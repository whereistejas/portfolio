---
import "../styles/global.css";

import Page from "./page.astro";
import Textorlink from "../components/textorlink.astro";

const { frontmatter } = Astro.props;

const headers = [
  { type: "text", content: (frontmatter.title as string).toUpperCase() },
  { type: "link", content: "CLOSE", href: "/archive" },
];
---

<Page>
  <Fragment slot="header">
    {
      headers.map((el) => (
        <Textorlink type={el.type} content={el.content} href={el.href} />
      ))
    }
  </Fragment>
  <Fragment slot="main">
    <article
      class="@container
      mt-1
      //
      prose dark:prose-invert max-w-full
      //
      text-slate-950 dark:text-slate-100
      //
      prose-a:font-light
      prose-a:relative
      prose-a:z-[1]
      prose-a:transition-colors prose-a:duration-150 prose-a:ease-in
      prose-a:text-neutral-950 prose-a:dark:text-neutral-50
      prose-a:hover:text-neutral-500 prose-a:hover:dark:text-neutral-400
      //
      prose-lg lg:prose-2xl
      //
      prose-h1:text-4xl
      prose-h2:text-3xl
      prose-h3:text-2xl
      prose-h4:text-xl
      prose-h5:text-lg
      prose-h6:text-md
      //
      prose-p:text-md md:prose-p:text-lg lg:prose-p:text-xl
      prose-li:text-md md:prose-li:text-lg lg:prose-li:text-xl
      //
      prose-p:leading-snug md:prose-p:leading-normal
      prose-li:leading-snug md:prose-li:leading-normal
      //
      prose-headings:font-semibold
      prose-headings:text-xl md:prose-headings:text-2xl lg:prose-headings:text-3xl
      //
      prose-headings:mt-1.5 prose-headings:mb-0.5
      prose-p:my-0.75
      marker:text-zinc-500 marker:dark:text-slate-200
      //
      prose-strong:font-semibold
      //
      font-serif font-light text-pretty text-justify hyphens-auto"
    >
      <slot />
    </article>
  </Fragment>
</Page>
