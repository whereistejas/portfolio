---
import "../styles/global.css";

import Page from "./page.astro";

import Textorlink from "../components/textorlink.astro";

const { frontmatter } = Astro.props;

const headers = [
  { type: "text", content: (frontmatter.title as string).toUpperCase() },
  { type: "link", content: "CLOSE", href: "/archive" },
];
---

<Page>
  <Fragment slot="header">
    {
      headers.map((el) => (
        <Textorlink type={el.type} content={el.content} href={el.href} />
      ))
    }
  </Fragment>
  <Fragment slot="main">
    <article
      class="@container prose
      text-pretty
      dark:prose-invert bg-neutral-100 dark:bg-neutral-800 text-slate-950 dark:text-slate-100
      prose-md md:prose-lg lg:prose-xl
      prose-a:font-normal prose-a:relative
      prose-a:z-[1]
      prose-a:transition-colors prose-a:duration-150 prose-a:ease-in
      prose-a:text-neutral-950 prose-a:dark:text-neutral-50
      prose-a:hover:text-neutral-500 prose-a:hover:dark:text-neutral-400
      prose-p:space-y-[2lh]
      prose-p:font-normal
      prose-p:leading-1.5 md:prose-p:leading-1.75 lg:prose-p:leading-2
      prose-headings:font-medium
      prose-headings:leading-1.5 md:prose-headings:leading-1.25 lg:prose-headings:leading-0.75
      prose-headings:text-xl md:prose-headings:text-2xl lg:prose-headings:text-3xl
      prose-h1:text-2xl md:prose-h1:text-3xl lg:prose-h1:text-4xl lg:prose-h1:leading-2.25
      prose-h2:text-xl md:prose-h2:text-2xl lg:prose-h2:text-3xl
      prose-h3:text-lg md:prose-h3:text-xl lg:prose-h3:text-2xl
      prose-h4:text-base md:prose-h4:text-lg lg:prose-h4:text-xl
      prose-h5:text-base md:prose-h5:text-base lg:prose-h5:text-lg"
    >
      <slot />
    </article>
  </Fragment>
</Page>
