---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "reveal.js/dist/reveal.css";
---

<script>
  import Reveal from "reveal.js";
  let deck = new Reveal({
    controls: true,
    embedded: true,
    progress: false,
    pause: false,
    loop: true,
    scrollLayout: "compact",
    backgroundTransition: "none",
  });
  deck.initialize();
</script>

<div class="flex flex-col w-screen">
  <div class="absolute z-10 t-0 r-0 p-3">
    <p class="text-md md:text-lg">
      {title}
    </p>
  </div>
  <div class="h-[33vh] pt-10 md:h-screen md:pt-0 relative z-0">
    <div class="reveal">
      <div class="slides">
