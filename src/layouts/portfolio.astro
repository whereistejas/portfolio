---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "reveal.js/dist/reveal.css";
// import "reveal.js/dist/theme/white.css";
---

<script>
  import Reveal from "reveal.js";
  let deck = new Reveal({
    embedded: true,
    height: "300",
  });
  deck.initialize();
</script>

<div class="flex flex-col h-1/3 md:h-dvh w-100vw">
  <div class="p-3">
    <h2>
      {title}
    </h2>
  </div>
  <div class="showcase h-full w-full">
    <div class="reveal">
      <div class="slides">
        <section>
          <img src="DSCF3992.jpg" />
        </section>
        <section>
          <img src="DSCF3993.jpg" />
        </section>
        <section>
          <img src="DSCF4002.jpg" />
        </section>
      </div>
    </div>
  </div>
</div>
