---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "reveal.js/dist/reveal.css";
---

<script>
  import Reveal from "reveal.js";
  let deck = new Reveal({
    embedded: true,
    slideNumber: "c/t",
    controlsTutorial: false,
    progress: false,
  });
  deck.initialize();
</script>

<div class="absolute top-0 left-0">
  <h2>
    {title}
  </h2>
</div>
<div class="h-screen w-screen">
  <div class="reveal">
    <div class="slides">
      <section>
        <img
          src="https://live.staticflickr.com/65535/53183761820_00eeab72e3_b_d.jpg"
        />
      </section>
      <section>
        <img
          src="https://live.staticflickr.com/65535/53183624504_baf929b1ed_o.jpg"
        />
      </section>
      <section>
        <img
          src="https://live.staticflickr.com/65535/53182878564_1db33b6455_o.jpg"
        />
      </section>
    </div>
  </div>
</div>
